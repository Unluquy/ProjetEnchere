<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <description></description>
        <display-name>ServletListes</display-name>
        <servlet-name>ServletListes</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletListe</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletListes</servlet-name>
        <url-pattern>/listes</url-pattern>
    </servlet-mapping>

    <display-name>TPListesCourses</display-name>

    <servlet>
        <description></description>
        <display-name>ServletPanier</display-name>
        <servlet-name>ServletPanier</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletPanier</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPanier</servlet-name>
        <url-pattern>/panier</url-pattern>
        <url-pattern>/clear</url-pattern>
    </servlet-mapping>

    <servlet>
        <description></description>
        <display-name>ServletNouvelle</display-name>
        <servlet-name>ServletNouvelle</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletNouvelle</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletNouvelle</servlet-name>
        <url-pattern>/nouvelle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/connect</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>connect</welcome-file>  <!-- nom d'un url pattern -->
    </welcome-file-list>
</web-app>