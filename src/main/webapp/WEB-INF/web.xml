<?xml version="1.0" encoding="UTF-8"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">

    <servlet>
        <servlet-name>ServletConnection</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletConnexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletConnection</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletInscription</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletInscription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletInscription</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletAccueil</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletAccueil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAccueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletProfil</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletProfil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletProfil</servlet-name>
        <url-pattern>/profil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletModifProfil</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletModifProfil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletModifProfil</servlet-name>
        <url-pattern>/modifProfil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletNouvelleVente</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletNouvelleVente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletNouvelleVente</servlet-name>
        <url-pattern>/nouvelleVente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletDetailVente</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletDetailVente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDetailVente</servlet-name>
        <url-pattern>/detailVente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletVenteRemporte</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletVenteRemporte</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletVenteRemporte</servlet-name>
        <url-pattern>/venteRemporte</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name> ServletVentePerdu</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletVentePerdu</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name> ServletVentePerdu</servlet-name>
        <url-pattern>/ventePerdu</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>accueil</welcome-file>  <!-- nom d'un url pattern -->
    </welcome-file-list>

    <servlet>
        <servlet-name> ServletManipulationCookie</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletManipulationCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name> ServletManipulationCookie</servlet-name>
        <url-pattern>/ManipulationCookie</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>

</web-app>