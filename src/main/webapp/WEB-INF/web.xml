<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ServletConnection</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletConnexion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletConnection</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletInscription</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletInscription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletInscription</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletAccueil</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletAccueil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAccueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletProfil</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletProfil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletProfil</servlet-name>
        <url-pattern>/profil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletModifProfil</servlet-name>
        <servlet-class>fr.eni.projetenchere.servlet.ServletModifProfil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletModifProfil</servlet-name>
        <url-pattern>/modifProfil</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>connexion</welcome-file>  <!-- nom d'un url pattern -->
    </welcome-file-list>
</web-app>